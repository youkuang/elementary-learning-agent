# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_TOKEN=xapp-your-slack-app-token

# AI Model Configuration (choose one)
# Option 1: Claude (Anthropic) - Recommended
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
AI_MODEL=claude-3-5-sonnet-20241022

# Option 2: OpenAI
# OPENAI_API_KEY=sk-your-openai-api-key
# AI_MODEL=gpt-4

# Database Configuration
DATABASE_TYPE=sqlite  # sqlite or postgresql
DATABASE_PATH=./data/learning.db

# For PostgreSQL (if DATABASE_TYPE=postgresql)
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=learning_agent
# DATABASE_USER=postgres
# DATABASE_PASSWORD=your-password

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=./logs/app.log

# Scheduler
ENABLE_SCHEDULER=true
DAILY_PLAN_TIME=08:00  # 每天早上8点发送学习计划
WEEKLY_REPORT_DAY=0    # 0=周日, 6=周六
WEEKLY_REPORT_TIME=20:00  # 每周日晚上8点发送报告

# System
TIMEZONE=Asia/Shanghai
